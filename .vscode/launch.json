{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "php",
            "request": "launch",
            "name": "XDebug on DevContainer",
            "port": 9000,
            "hostname": "localhost",
            "pathMappings": {
                "/var/www/html/blocks/simplestatichtml": "${workspaceFolder}" // Workspace directory in the container. /var/www/html/${plugin_type}/${plugin_name}
            }
        },
        {
            "type": "php",
            "request": "launch",
            "name": "Launch currently open script",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}
